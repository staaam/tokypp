<?xml version="1.0" encoding="utf-8"?>
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema">
	<xsd:include schemaLocation="common.xsd"/>
	<!--elementFormDefault="qualified"
    xmlns="http://tempuri.org/XMLSchema.xsd"
    xmlns:mstns="http://tempuri.org/XMLSchema.xsd"
    xmlns:xs="http://www.w3.org/2001/XMLSchema"			    -->
	<xsd:element name="discussion">
		<xsd:complexType>
			<xsd:sequence>
				<xsd:element name="name" type="xsd:string"/>
				<xsd:element name="user" type="xsd:string"/>
				<!-- Do we need to add a list of pointers to Links? -->
				<xsd:element name="opinion" type="Opinion" maxOccurs="unbounded"/>
			</xsd:sequence>
		</xsd:complexType>
	</xsd:element>
	<xsd:complexType name="Opinion">
		<xsd:sequence>
			<xsd:element name="id" type="xsd:positiveInteger"/>
			<xsd:element name="name" type="xsd:string"/>
			<xsd:element name="quote" type="Quote" minOccurs="0" maxOccurs="unbounded"/>
			<xsd:element name="opinionRel" type="OpinionRelation" minOccurs="0" maxOccurs="unbounded"/>
		</xsd:sequence>
	</xsd:complexType>
	<xsd:complexType name="Quote">
		<xsd:sequence>
			<xsd:element name="id" type="xsd:positiveInteger"/>
			<xsd:element name="sourceFile" type="xsd:string"/>
			<xsd:element name="comment" type="xsd:string"/>
			<xsd:element name="excerption" type="Excerption" maxOccurs="unbounded"/>
		</xsd:sequence>
	</xsd:complexType>
	<xsd:complexType name="OpinionRelation">
		<xsd:sequence>
			<xsd:element name="targetId" type="xsd:nonNegativeInteger"/>
			<xsd:element name="comment" type="xsd:string"/>
			<xsd:element name="type" type="OpinionRelationType"/>
		</xsd:sequence>
	</xsd:complexType>
	<xsd:simpleType name="OpinionRelationType">
		<xsd:restriction base="xsd:string">
			<xsd:enumeration value="opposition"/>
		</xsd:restriction>
	</xsd:simpleType>
</xsd:schema>
